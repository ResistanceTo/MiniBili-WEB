---
import Footer from "@components/sections/Footer";
import PageAnimation from "@components/ui/PageAnimation";
import StructuredData from "@components/seo/StructuredData.astro";

interface Props {
  title: string;
  description?: string;
  showFooter?: boolean;
  structuredDataType?: 'website' | 'mobileApplication';
}

const { title, description, showFooter = true, structuredDataType = 'website' } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url.href}>

    <!-- Favicons -->
    <link rel="icon" type="image/webp" href="/favicon-512.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <title>{title}</title>
    {description && <meta name="description" content={description}>}
    <meta name="keywords" content="MiniBili,哔哩哔哩,bilibili,B站,B站客户端,第三方客户端,iOS,iPhone,iPad,免费,无广告,隐私保护,TestFlight,哔哩哔哩第三方,哔哩哔哩无广告,Bilibili alternative">
    <meta name="author" content="ResistanceTo">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={Astro.url.href}>
    <meta property="og:title" content={title}>
    {description && <meta property="og:description" content={description}>}
    <meta property="og:image" content={new URL('/og_image.png', Astro.url).href}>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:site_name" content="MiniBili">
    <meta property="og:locale" content="zh_CN">

    {/* <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    {description && <meta name="twitter:description" content={description}>}
    <meta name="twitter:image" content={new URL('/MiniBili.png', Astro.url).href}> */}

    <!-- Apple Mobile Web App -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="MiniBili">

    <!-- Structured Data -->
    <StructuredData
      type={structuredDataType}
      title={title}
      description={description}
      url={Astro.url.href}
    />

    <script is:inline>
      const theme = localStorage.getItem('theme') || 'system';
      const root = document.documentElement;
      root.classList.remove('light', 'dark');
      
      if (theme === 'system') {
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        root.classList.add(prefersDark ? 'dark' : 'light');
      } else {
        root.classList.add(theme);
      }
      
      !localStorage.getItem('theme') && localStorage.setItem('theme', 'system');
    </script>
  </head>
  <body class="transition-colors duration-300 bg-gray-50 text-gray-900 dark:bg-black dark:text-white">
    <div class="mx-auto min-h-screen max-w-[800px]">
      <PageAnimation client:load>
        <main><slot /></main>
        {showFooter && <Footer client:load />}
      </PageAnimation>
    </div>
  </body>
</html>


<style is:global>
  * { transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease; }
  html.light { color-scheme: light; }
  html.dark { color-scheme: dark; }

  .screenshots-scroll {
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgb(255 255 255 / 0.1) transparent;
  }
  
  .light .screenshots-scroll { scrollbar-color: rgb(0 0 0 / 0.2) transparent; }
  
  .screenshots-scroll::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  
  .screenshots-scroll::-webkit-scrollbar-track { background: transparent; }
  
  .screenshots-scroll::-webkit-scrollbar-thumb {
    background-color: rgb(255 255 255 / 0.1);
    border-radius: 3px;
  }
  
  .light .screenshots-scroll::-webkit-scrollbar-thumb { background-color: rgb(0 0 0 / 0.2); }
</style>
